# syntax=docker/dockerfile:1

FROM sigmabase AS clean
WORKDIR /home/sigmaos

# Remove all user bins, except for exec-uproc and named, which are shared by
# all realms.
RUN mv bin/user/common/exec-uproc /tmp && \
  mv bin/user/common/named /tmp && \
  rm -rf bin/user/common/* && \
  mv /tmp/exec-uproc bin/user/common/exec-uproc && \
  mv /tmp/named bin/user/common/named
